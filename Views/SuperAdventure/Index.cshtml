@model SuperAdventure.ViewModels.GameFormViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Game On!</h1>

<h3>You are at:  @Model.Location.Name</h3>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Player.CurrentHitPoints)
        @Model.Player.CurrentHitPoints
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Player.MaximumHitPoints)
        @Model.Player.MaximumHitPoints
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Player.Gold)
        @Model.Player.Gold
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Player.ExperiencePoints)
        @Model.Player.ExperiencePoints
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Player.Level)
        @Model.Player.Level
    </div>
}

